{
  "name": "s-public",
  "version": "2.3.1",
  "type": "module",
  "description": "Portfolio and blog pages of s-hirano-ist.",
  "author": "s-hirano-ist",
  "packageManager": "pnpm@10.12.2",
  "scripts": {
    "astro": "astro",
    "copy": "rm -rf src/content && cp -r s-contents-summary src/content && rm -rf src/content/package.json src/content/pnpm-lock.yaml src/content/.github src/content/script src/content/s-schema src/content/biome.json src/content/.gitmodules src/content/.gitignore src/content/.env.sample src/content/.markdownlint-cli2.jsonc",
    "check": "astro check",
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "sync": "astro sync",
    "tsc": "tsc --noEmit",
    "fmt": "prettier --cache --check **/*.astro .",
    "fmt:fix": "prettier --cache --write **/*.astro .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:mark": "markdownlint-cli2 src/content/summary/*",
    "lint:mark:fix": "markdownlint-cli2-fix src/content/summary/*",
    "lint:css": "stylelint .",
    "lint:css:fix": "stylelint . --fix",
    "lint:secret": "secretlint --maskSecrets **/*",
    "snapshots": "playwright test",
    "snapshots:update": "playwright test --update-snapshots",
    "license:summary": "license-checker --summary> license.summary.txt",
    "commit": "git cz",
    "prepare": "husky",
    "security": "pnpm audit",
    "postinstall": "pnpm copy"
  },
  "lint-staged": {
    "*": [
      "pnpm check",
      "pnpm fmt",
      "pnpm lint:secret",
      "bash checkLicense.sh"
    ],
    "src/**/*.{js, jsx, ts, tsx, astro}": [
      "pnpm tsc",
      "pnpm lint"
    ],
    "_markdown/**/*.md": "pnpm lint:mark",
    "src/**/*.{css, astro}": "pnpm lint:css"
  },
  "dependencies": {
    "@astrojs/check": "0.9.4",
    "@astrojs/react": "3.6.3",
    "@astrojs/sitemap": "3.3.1",
    "@astrojs/tailwind": "5.1.5",
    "@fontsource-variable/noto-sans-jp": "5.2.6",
    "astro": "4.16.18",
    "fuse.js": "7.1.0",
    "github-slugger": "2.0.0",
    "jsdom": "26.1.0",
    "lenis": "1.3.4",
    "mdast-util-toc": "7.1.0",
    "photoswipe": "5.4.4",
    "rehype-autolink-headings": "7.1.0",
    "rehype-slug": "6.0.0",
    "rehype-stringify": "10.0.1",
    "remark-parse": "11.0.0",
    "remark-rehype": "11.1.2",
    "remark-toc": "9.0.0",
    "sanitize-html": "2.16.0",
    "satori": "0.13.1",
    "sharp": "0.34.2",
    "tailwindcss": "3.4.17",
    "tailwindcss-animated": "2.0.0",
    "taos": "1.0.5",
    "theme-change": "2.5.0",
    "typescript": "5.5.4",
    "unified": "11.0.5"
  },
  "devDependencies": {
    "@eslint/js": "9.26.0",
    "@playwright/test": "1.52.0",
    "@secretlint/secretlint-rule-preset-recommend": "10.1.1",
    "@tailwindcss/typography": "0.5.16",
    "@types/jsdom": "21.1.7",
    "@types/mdast": "4.0.4",
    "@types/react": "19.1.8",
    "@types/sanitize-html": "2.16.0",
    "@typescript-eslint/parser": "8.32.1",
    "astro-eslint-parser": "1.2.2",
    "daisyui": "4.12.24",
    "dotenv": "17.0.0",
    "eslint": "9.26.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-import-resolver-typescript": "4.3.5",
    "eslint-plugin-astro": "1.3.1",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-import-x": "4.11.1",
    "eslint-plugin-prettier": "5.4.1",
    "eslint-plugin-redos": "4.5.0",
    "eslint-plugin-tailwindcss": "3.18.0",
    "git-cz": "4.9.0",
    "husky": "9.1.7",
    "license-checker": "25.0.1",
    "lint-staged": "16.0.0",
    "markdownlint-cli2": "0.18.1",
    "postcss-html": "1.8.0",
    "prettier": "3.5.3",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-tailwindcss": "0.6.13",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "secretlint": "10.1.1",
    "stylelint": "16.19.1",
    "stylelint-config-html": "1.1.0",
    "stylelint-config-standard": "36.0.1",
    "stylelint-declaration-block-no-ignored-properties": "2.8.0",
    "stylelint-no-unsupported-browser-features": "8.0.4",
    "stylelint-order": "7.0.0",
    "svgo": "3.3.2",
    "typescript-eslint": "8.32.1",
    "vnu-jar": "24.10.17"
  }
}
