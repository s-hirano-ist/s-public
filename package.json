{
  "name": "s-public",
  "version": "2.3.1",
  "type": "module",
  "description": "Portfolio and blog pages of s-hirano-ist.",
  "author": "s-hirano-ist",
  "packageManager": "pnpm@10.22.0",
  "scripts": {
    "astro": "astro",
    "check": "astro check",
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "sync": "astro sync",
    "tsc": "tsc --noEmit",
    "fmt": "prettier --cache --check **/*.astro .",
    "fmt:fix": "prettier --cache --write **/*.astro .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:mark": "markdownlint-cli2 **/*.md",
    "lint:mark:fix": "markdownlint-cli2-fix **/*.md",
    "lint:css": "stylelint .",
    "lint:css:fix": "stylelint . --fix",
    "lint:secret": "secretlint --maskSecrets **/*",
    "snapshots": "playwright test",
    "snapshots:update": "playwright test --update-snapshots",
    "license:summary": "license-checker-rseidelsohn --summary > license.summary.txt",
    "license:json": "license-checker-rseidelsohn --json > src/data/license/data.gen.json",
    "prepare": "husky",
    "security": "pnpm audit",
    "generate:photo": "tsx script/generate-photo-path.ts",
    "generate:book": "tsx script/generate-book-data.ts"
  },
  "lint-staged": {
    "*": [
      "pnpm check",
      "pnpm fmt",
      "pnpm lint:secret",
      "pnpm lint:css",
      "bash checkLicense.sh"
    ],
    "src/**/*.{js, jsx, ts, tsx, astro}": [
      "pnpm tsc",
      "pnpm lint"
    ],
    "_markdown/**/*.md": "pnpm lint:mark",
    "src/**/*.{css, astro}": "pnpm lint:css"
  },
  "dependencies": {
    "@astrojs/check": "0.9.5",
    "@astrojs/react": "4.4.2",
    "@astrojs/sitemap": "3.6.0",
    "@fontsource-variable/noto-sans-jp": "5.2.9",
    "@tailwindcss/vite": "4.1.17",
    "astro": "5.15.9",
    "jsdom": "27.0.1",
    "lenis": "1.3.15",
    "photoswipe": "5.4.4",
    "rehype-autolink-headings": "7.1.0",
    "rehype-slug": "6.0.0",
    "remark-toc": "9.0.0",
    "sanitize-html": "2.17.0",
    "satori": "0.18.3",
    "sharp": "0.34.5",
    "slug": "11.0.1",
    "tailwindcss": "4.1.17",
    "tailwindcss-animated": "2.0.0",
    "typescript": "5.9.3"
  },
  "devDependencies": {
    "@eslint/css": "0.13.0",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.37.0",
    "@eslint/markdown": "7.4.0",
    "@googleapis/books": "7.0.0",
    "@playwright/test": "1.56.1",
    "@secretlint/secretlint-rule-preset-recommend": "11.2.5",
    "@tailwindcss/typography": "0.5.19",
    "@types/jsdom": "27.0.0",
    "@types/react": "19.2.6",
    "@types/sanitize-html": "2.16.0",
    "@types/slug": "5.0.9",
    "@typescript-eslint/parser": "8.46.1",
    "astro-eslint-parser": "1.2.2",
    "daisyui": "5.2.3",
    "eslint": "9.37.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-astro": "1.3.1",
    "eslint-plugin-boundaries": "5.0.1",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-import-x": "4.16.1",
    "eslint-plugin-jsonc": "2.21.0",
    "eslint-plugin-perfectionist": "4.15.1",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-redos": "4.5.0",
    "eslint-plugin-spellcheck": "0.0.20",
    "eslint-plugin-tailwindcss": "3.18.2",
    "eslint-plugin-unicorn": "62.0.0",
    "eslint-plugin-unused-imports": "4.2.0",
    "eslint-plugin-yml": "1.19.0",
    "husky": "9.1.7",
    "license-checker-rseidelsohn": "4.4.2",
    "lint-staged": "16.2.6",
    "markdownlint-cli2": "0.18.1",
    "postcss-html": "1.8.0",
    "prettier": "3.6.2",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-tailwindcss": "0.6.14",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "secretlint": "11.2.5",
    "stylelint": "16.25.0",
    "stylelint-config-standard": "39.0.1",
    "stylelint-declaration-block-no-ignored-properties": "2.8.0",
    "stylelint-no-unsupported-browser-features": "8.0.5",
    "stylelint-order": "7.0.0",
    "svgo": "4.0.0",
    "tailwindcss-motion": "1.1.1",
    "tsx": "4.20.6",
    "typescript-eslint": "8.46.1",
    "vnu-jar": "25.11.17"
  }
}
