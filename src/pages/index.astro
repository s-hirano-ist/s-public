---
import AboutMe from "@components/AboutMe.astro";
import Education from "@components/Education.astro";
import PortfolioLinks from "@components/PortfolioLinks.astro";
import Qualifications from "@components/Qualifications.astro";
import TechStack from "@components/TechStack.astro";
// import achievementsData from "@layouts/Achievements.json";
import Top from "@components/Top.astro";
import WorkExperience from "@components/WorkExperience.astro";
import { SITE } from "@config";
import Layout from "@layouts/Layout.astro";

const jsonLd = [
  {
    "@context": "https://schema.org",
    "@type": "WebSite",
    "@id": "https://s-hirano.com/#website",
    name: "Portfolio",
    alternateName: "Portfolio of s-hirano-ist",
    url: "https://s-hirano.com",
    description: "Portfolio and blog pages of s-hirano-ist.",
    inLanguage: "ja",
    author: {
      "@id": "https://s-hirano.com/#person",
    },
    publisher: {
      "@id": "https://s-hirano.com/#person",
    },
  },
  {
    "@context": "https://schema.org",
    "@type": "Person",
    "@id": "https://s-hirano.com/#person",
    name: "s-hirano-ist",
    givenName: "空暉",
    familyName: "平野",
    alternateName: "s-hirano-ist",
    url: "https://s-hirano.com",
    email: "s-hirano-ist@outlook.com",
    description:
      "Software Engineer specializing in TypeScript, React, and AWS infrastructure. Portfolio and blog of s-hirano-ist.",
    image: "https://s-hirano.com/favicon-32x32.png",
    jobTitle: "Software Engineer",
    worksFor: {
      "@type": "Organization",
      name: "GMOインターネット株式会社",
      url: "https://www.internet.gmo",
    },
    alumniOf: [
      {
        "@type": "EducationalOrganization",
        name: "大阪大学大学院 情報科学研究科 バイオ情報工学専攻",
        alternateName:
          "Graduate School of Information Science and Technology at Osaka University",
        url: "https://www.osaka-u.ac.jp",
      },
      {
        "@type": "EducationalOrganization",
        name: "大阪大学 基礎工学部 情報科学科",
        alternateName: "School of Engineering Science at Osaka University",
        url: "https://www.osaka-u.ac.jp",
      },
    ],
    knowsAbout: [
      "TypeScript",
      "React",
      "Next.js",
      "Astro",
      "AWS",
      "Infrastructure as Code",
      "Frontend Development",
      "Web Development",
      "Software Engineering",
    ],
    sameAs: [
      "https://github.com/s-hirano-ist",
      "https://x.com/s_hirano_ist",
      "https://twitter.com/s_hirano_ist",
      "https://linkedin.com/in/空暉-平野-2a7183337",
    ],
  },
];
---

<Layout
  title="Portfolio"
  description={`Portfolio of ${SITE.author}.`}
  jsonLd={jsonLd}>
  <main class="background main-contents" data-theme="noTheme">
    <section>
      <div
        class="mx-auto grid grid-cols-1 gap-2 sm:gap-4 md:grid-cols-2 lg:grid-cols-3">
        <AboutMe class="order-2 lg:order-none" />

        <Top class="order-1 lg:order-none" />

        <PortfolioLinks class="order-3 lg:order-none" />

        <TechStack class="order-4 lg:order-none" />

        <Education class="order-5 lg:order-none" />

        <WorkExperience class="order-6 lg:order-none" />

        <Qualifications class="order-7 lg:order-none" />
      </div>
    </section>
  </main>
</Layout>

<style>
  h2 {
    @apply animate-wiggle animate-infinite;
  }

  .main-contents h2 {
    @apply my-4 inline-block text-xl font-bold text-primary sm:text-2xl;
  }

  .main-contents section {
    @apply mx-auto p-2 sm:p-4;
  }

  /* Timeline inside BentoTile */
  .timeline-container {
    @apply mt-2 text-xs;
  }
</style>
