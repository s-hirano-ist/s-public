---
import PageLinkCard from "./PageLinkCard.astro";
import BentoTile from "@components/BentoTile.astro";

const { class: className } = Astro.props;
---

<BentoTile
  title="About Me"
  size="large"
  bgColor="bg-gradient-to-br from-purple-900/20 to-pink-900/20"
  clickable={false}
  class={className}>
  <svg
    slot="icon"
    xmlns="http://www.w3.org/2000/svg"
    width="24"
    height="24"
    class="size-8"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    aria-label="About Me"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    class="icon icon-tabler icons-tabler-outline icon-tabler-info-circle"
    ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
      d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0"></path><path d="M12 9h.01"
    ></path><path d="M11 12h1v4h1"></path></svg
  >
  <div slot="content">
    <div class="grid grid-cols-1 gap-4">
      <PageLinkCard
        href="https://github.com/s-hirano-ist"
        title="GitHub"
        bgColor="bg-gradient-to-br from-blue-900/20 to-indigo-900/20"
        targetBlank>
        <svg
          slot="icon"
          xmlns="http://www.w3.org/2000/svg"
          class="icon icon-tabler icon-tabler-brand-github"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          aria-label="GitHub"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path
            d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"
          ></path>
        </svg>
      </PageLinkCard>
      <PageLinkCard
        href="https://twitter.com/s_hirano_ist"
        title="X"
        bgColor="bg-gradient-to-br from-orange-900/20 to-red-900/20"
        targetBlank>
        <svg
          slot="icon"
          xmlns="http://www.w3.org/2000/svg"
          class="icon icon-tabler icon-tabler-brand-x"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          stroke-width="2"
          aria-label="X"
          stroke="currentColor"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path d="M4 4l11.733 16h4.267l-11.733 -16z"></path>
          <path d="M4 20l6.768 -6.768m2.46 -2.46l6.772 -6.772"></path>
        </svg>
      </PageLinkCard>
      <PageLinkCard
        href="mailto:s-hirano-ist@outlook.com"
        title="Mail"
        bgColor="bg-gradient-to-br from-purple-900/20 to-pink-900/20"
        targetBlank>
        <svg
          slot="icon"
          xmlns="http://www.w3.org/2000/svg"
          class="icon icon-tabler icon-tabler-mail"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          stroke-width="2"
          aria-label="Mail"
          stroke="currentColor"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path
            d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z">
          </path>
          <path d="M3 7l9 6l9 -6"></path>
        </svg>
      </PageLinkCard>
      <PageLinkCard
        href="https://linkedin.com/in/空暉-平野-2a7183337"
        title="LinkedIn"
        bgColor="bg-gradient-to-br from-green-900/20 to-emerald-900/20"
        targetBlank>
        <svg
          slot="icon"
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          aria-label="LinkedIn"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="icon icon-tabler icons-tabler-outline icon-tabler-social"
          ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
            d="M12 5m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0"></path><path
            d="M5 19m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0"></path><path
            d="M19 19m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0"></path><path
            d="M12 14m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0"></path><path
            d="M12 7l0 4"></path><path d="M6.7 17.8l2.8 -2"></path><path
            d="M17.3 17.8l-2.8 -2"></path>
        </svg>
      </PageLinkCard>
    </div>
  </div>
</BentoTile>
