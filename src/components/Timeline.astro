---
export type Props = {
  data: { date: string; description: string; title: string }[];
};
const { data } = Astro.props;
---

<div class="timeline">
  <ol class="relative">
    {
      data.map((d, i) => (
        <li class={`ms-6 ${i === data.length - 1 ? "mb-0" : "mb-5"}`}>
          <div class="absolute -start-1.75 mt-1.5 size-3.5 rounded-full border-2 border-primary/60 bg-background shadow-[0_0_0_3px] shadow-primary/10" />
          <div class="flex flex-col gap-0.5">
            <span class="text-[10px] font-medium uppercase tracking-wider text-muted-foreground/70">
              {d.date}
            </span>
            <h3 class="text-sm font-semibold leading-snug text-foreground">
              {d.title}
            </h3>
            {d.description && (
              <p class="mt-0.5 text-xs leading-relaxed text-muted-foreground">
                {d.description}
              </p>
            )}
          </div>
        </li>
      ))
    }
  </ol>
</div>
