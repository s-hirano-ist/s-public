---
export type Props = {
  href: string;
  title: string;
  description: string;
};
const { href, title, description } = Astro.props;
---

<li class="my-6">
  <a
    href={href}
    class="inline-block decoration-dashed underline-offset-4 focus-visible:no-underline focus-visible:underline-offset-0">
    <h2
      class="text-lg font-medium text-primary decoration-dashed hover:underline">
      {title}
    </h2>
  </a>
  <p>{description}</p>
</li>
