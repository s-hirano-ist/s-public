---
export type Props = {
  description: string;
  href: string;
  title: string;
};
const { href, title, description } = Astro.props;
---

<li class="my-4">
  <a
    href={href}
    class="group block rounded-xl border border-muted p-5 transition-all duration-200 hover:border-primary/30 hover:shadow-md">
    <h2
      class="text-lg font-semibold text-foreground transition-colors group-hover:text-primary">
      {title}
    </h2>
    <p class="mt-2 text-sm text-muted-foreground">{description}</p>
  </a>
</li>
