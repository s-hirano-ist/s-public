---
import { Image } from "astro:assets";
import BentoTile from "@components/BentoTile.astro";
import { SITE } from "@config";
import sIcon from "@data/assets/s-icon-transparent.svg";

const { class: className } = Astro.props;
---

<BentoTile
  size="hero"
  bgColor="bg-linear-to-br from-primary/15 via-accent/5 to-primary/10"
  clickable={false}
  class={className}>
  <div slot="content">
    <div
      class="flex flex-col items-center gap-6 py-4 md:flex-row md:items-center md:gap-8">
      <div class="shrink-0">
        <Image src={sIcon} alt="" class="size-28 rounded-full md:size-36" />
      </div>

      <div class="text-center md:text-left">
        <h1
          class="text-gradient text-3xl font-extrabold tracking-tight sm:text-4xl md:text-5xl">
          {SITE.author}
        </h1>
        <p class="mt-2 text-lg font-medium text-primary sm:text-xl">
          Software Engineer
        </p>

        <div
          class="mx-auto mt-3 h-0.5 w-16 rounded-full bg-linear-to-r from-primary to-accent md:mx-0">
        </div>

        <p
          class="mt-3 max-w-md text-sm leading-relaxed text-muted-foreground sm:text-base">
          Interested in frontend development, serverless architectures, and
          DevOps. Building at GMO Internet.
        </p>
      </div>
    </div>
  </div>
</BentoTile>
