---
import { Image } from "astro:assets";
import BentoTile from "@components/BentoTile.astro";
import { SITE } from "@config";
import sIcon from "@data/assets/s-icon-transparent.svg";

const { class: className } = Astro.props;
---

<BentoTile
  size="hero"
  bgColor="bg-linear-to-br from-primary/10 via-transparent to-accent/8"
  clickable={false}
  class={`${className} relative`}>
  <div slot="content">
    <div
      class="pointer-events-none absolute -top-8 -left-8 size-48 rounded-full bg-primary/8 blur-3xl">
    </div>
    <div
      class="pointer-events-none absolute -right-8 -bottom-8 size-36 rounded-full bg-accent/6 blur-3xl">
    </div>

    <div
      class="relative flex flex-col items-center gap-6 py-6 md:flex-row md:items-center md:gap-10">
      <div class="shrink-0">
        <div class="relative">
          <div
            class="absolute -inset-1 rounded-full bg-linear-to-br from-primary/30 to-accent/30 blur-sm">
          </div>
          <Image
            src={sIcon}
            alt=""
            class="relative size-28 rounded-full ring-2 ring-border/30 md:size-36"
          />
        </div>
      </div>

      <div class="text-center md:text-left">
        <p
          class="mb-1 text-xs font-medium uppercase tracking-[0.2em] text-muted-foreground">
          Portfolio
        </p>
        <h1
          class="text-gradient text-3xl font-extrabold tracking-tight sm:text-4xl md:text-5xl">
          {SITE.author}
        </h1>
        <p
          class="mt-2 text-base font-medium tracking-wide text-primary/80 sm:text-lg">
          Software Engineer
        </p>

        <div
          class="mx-auto mt-4 h-px w-24 bg-linear-to-r from-transparent via-primary/50 to-transparent md:mx-0">
        </div>

        <p
          class="mt-4 max-w-md text-sm leading-relaxed text-muted-foreground sm:text-base">
          Interested in frontend development, serverless architectures, and
          DevOps. Building at GMO Internet.
        </p>
      </div>
    </div>
  </div>
</BentoTile>
