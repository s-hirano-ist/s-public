---
export type Props = {
  bgColor?: string;
  class?: string;
  clickable?: boolean;
  href?: string;
  size: "hero" | "large" | "wide";
  textColor?: string;
  title?: string;
};

const {
  title,
  size,
  bgColor = "bg-card/80",
  textColor = "text-card-foreground",
  class: className,
} = Astro.props;

const sizeClasses = {
  hero: "col-span-1 md:col-span-2 row-auto",
  large: "col-span-1 row-auto",
  wide: "col-span-1 row-auto h-32",
};

const baseClasses = `
  ${sizeClasses[size]}
  ${bgColor}
  ${textColor}
  rounded-2xl p-3 sm:p-5 backdrop-blur-sm
  hover:scale-[1.02] hover:-translate-y-0.5
  border border-border/40
  glow-hover
  group
  overflow-visible
  bento-enter
  ${className || ""} transition-all duration-300 ease-out
`;
---

<div class={baseClasses}>
  <div class="flex h-full flex-col justify-between gap-2">
    <div class="flex flex-col items-center space-y-2">
      <div class="flex items-center justify-center text-primary">
        <slot name="icon" />
      </div>

      {
        title && (
          <h3 class="text-center text-lg font-bold tracking-tight transition-colors duration-300 group-hover:text-primary">
            {title}
          </h3>
        )
      }
    </div>
    <div class="mt-2">
      <slot name="content" />
    </div>
    <div></div>
  </div>
</div>
