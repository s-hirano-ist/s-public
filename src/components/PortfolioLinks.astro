---
import BentoTile from "@components/BentoTile.astro";

const { class: className } = Astro.props;

const portfolioLinks = [
  {
    href: "/book",
    title: "Book",
    icon: '<path d="M3 19a9 9 0 0 1 9 0a9 9 0 0 1 9 0"/><path d="M3 6a9 9 0 0 1 9 0a9 9 0 0 1 9 0"/><path d="M3 6l0 13"/><path d="M12 6l0 13"/><path d="M21 6l0 13"/>',
  },
  {
    href: "/blog",
    title: "Blog",
    icon: '<path d="M3 7l6 -3l6 3l6 -3v13l-6 3l-6 -3l-6 3v-13"/><path d="M9 12v.01"/><path d="M6 13v.01"/><path d="M17 15l-4 -4"/><path d="M13 15l4 -4"/>',
  },
  {
    href: "/photo",
    title: "Photo",
    icon: '<path d="M5 7h1a2 2 0 0 0 2 -2a1 1 0 0 1 1 -1h6a1 1 0 0 1 1 1a2 2 0 0 0 2 2h1a2 2 0 0 1 2 2v9a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-9a2 2 0 0 1 2 -2"/><path d="M9 13a3 3 0 1 0 6 0a3 3 0 0 0 -6 0"/>',
  },
  {
    href: "/diy",
    title: "DIY",
    icon: '<path d="M13 9l7.383 7.418c.823 .82 .823 2.148 0 2.967a2.11 2.11 0 0 1 -2.976 0l-7.407 -7.385"/><path d="M6.66 15.66l-3.32 -3.32a1.25 1.25 0 0 1 .42 -2.044l3.24 -1.296l6 -6l3 3l-6 6l-1.296 3.24a1.25 1.25 0 0 1 -2.044 .42z"/>',
  },
];
---

<BentoTile
  title="Portfolio Links"
  size="large"
  bgColor="bg-linear-to-br from-accent/15 to-primary/10"
  clickable={false}
  class={className}>
  <svg
    slot="icon"
    xmlns="http://www.w3.org/2000/svg"
    width="24"
    height="24"
    viewBox="0 0 24 24"
    class="size-8"
    aria-label="Portfolio Links"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round">
    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
    <path d="M9 15l6 -6"></path>
    <path d="M11 6l.463 -.536a5 5 0 0 1 7.071 7.072l-.534 .464"></path>
    <path
      d="M13 18l-.397 .534a5.068 5.068 0 0 1 -7.127 0a4.972 4.972 0 0 1 0 -7.071l.524 -.463"
    ></path>
  </svg>

  <div slot="content">
    <div class="grid grid-cols-2 gap-3">
      {
        portfolioLinks.map(link => (
          <a
            href={link.href}
            class="group/link flex flex-col items-center gap-2 rounded-xl border border-border/30 bg-card/50 p-4 transition-all duration-200 hover:-translate-y-0.5 hover:border-primary/40 hover:bg-card/80 hover:shadow-md hover:shadow-primary/10">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="size-7 text-primary transition-transform duration-200 group-hover/link:scale-110"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
              set:html={link.icon}
            />
            <span class="text-sm font-semibold transition-colors duration-200 group-hover/link:text-primary">
              {link.title}
            </span>
          </a>
        ))
      }
    </div>
  </div>
</BentoTile>
