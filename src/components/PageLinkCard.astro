---
export type Props = {
  bgColor?: string;
  href: string;
  targetBlank?: boolean;
  textColor?: string;
  title: string;
};

const {
  href,
  title,
  bgColor = "bg-card/80",
  textColor = "text-card-foreground",
  targetBlank = false,
} = Astro.props;

const baseClasses = `
col-span-1 row-span-1 h-24 text-center
  ${bgColor}
  ${textColor}
  rounded-xl p-6 backdrop-blur-sm
  transition-all duration-300 ease-out
  hover:scale-105 hover:shadow-lg hover:shadow-primary/20
  border border-border/40
  group
  overflow-visible
`;
---

<a
  href={href}
  class={baseClasses}
  target={targetBlank ? "_blank" : undefined}
  rel={targetBlank ? "noopener noreferrer" : undefined}>
  <div class="grid h-full grid-cols-4 items-center text-left text-primary">
    <slot name="icon" />

    <h3
      class="col-span-3 text-lg font-bold transition-colors duration-300 group-hover:text-primary">
      {title}
    </h3>
  </div>

  <div class="flex-1">
    <slot name="content" />
  </div>
</a>
